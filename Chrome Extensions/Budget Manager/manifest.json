
{
    "manifest_version" : 3,
    "name" : "Budget Manager",
    "description" : "This extension helps you to track your expenses.",
    "version" : "1.0",

    "icons" : {
        "128" : "icons/icon128.jpg",
        "48" : "icons/icon48.jpg",
        "16" : "icons/icon16.jpg"
    },

    "action" : {
        "default_icon" : "icons/icon16.jpg",
        "default_popup" : "popup.html"
    },

    "background" : {
        "scripts" : ["eventPage.js"],
        "persistance" : false
    },

    "permissions" : [
        "storage",
        "contextMenus",
        "notifications"
    ],

    "options_page" : "options.html"
}